<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <g:HorizontalPanel>

    <g:VerticalPanel width="44px" height="490px" styleName="verticalPanel" ui:field="leftDeclaredArea"/>
  	<g:VerticalPanel width="44px" height="490px" styleName="verticalPanel" ui:field="leftAtHandArea"/>

  	<g:VerticalPanel>
    	<g:HorizontalPanel width="490px" height="44px" ui:field="acrossDeclaredArea"/>
    	<g:HorizontalPanel width="490px" height="44px" ui:field="acrossAtHandArea"/>
    	<g:HorizontalPanel width="490px" height="400px" ui:field="usedArea" />
    	<g:HorizontalPanel width="490px" height="44px" ui:field="myAtHandArea"/>
    	<g:HorizontalPanel width="490px" height="44px">
      	<g:HorizontalPanel width="300" height="44px" ui:field="selectedArea"/>
      	<g:Button ui:field="claimBtn" text="Discard"/>
