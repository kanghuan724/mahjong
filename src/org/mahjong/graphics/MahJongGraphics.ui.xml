    	<g:HorizontalPanel width="490px" height="44px" ui:field="myDeclaredArea"/>
  	</g:VerticalPanel>
  	<g:VerticalPanel width="44px" height="490px" styleName="verticalPanel" ui:field="rightAtHandArea"/>
  	<g:VerticalPanel width="44px" height="490px" styleName="verticalPanel" ui:field="rightDeclaredArea"/>
  </g:HorizontalPanel>
</ui:UiBinder> 